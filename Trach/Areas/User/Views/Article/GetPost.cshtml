@model BuiesnesLogic.Entities.Article

<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />

<div class="container mt-5">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="article-detail">
                <img src="@($"data:image/jpeg;base64,{Convert.ToBase64String(Model.Image)}")" class="img-fluid rounded" alt="@Model.Title">
                <h2 class="mt-3">@Model.Title</h2>
                <p class="text-muted">@Model.PostDate.ToString("MMMM dd, yyyy")</p>
                <p class="font-italic">@Model.SubTitle</p>
                <div class="article-content mt-4">
                    @Html.Raw(Model.Content.Replace(Environment.NewLine, "<br>"))
                </div>
                <div class="article-author mt-5">
                    <p>Written by: <strong>@(Model.User?.Firstname + " " + Model.User?.Lastname ?? "Anonymous")</strong></p>
                </div>
                <div class="article-comments mt-5">
                    <h3>Comments</h3>
                    @if (Model.Comments.Count <= 0)
                    {
                        <div class="comment mb-3">
                            <p>there is not comment</p>
                        </div>
                    }
                    else
                    {
                        foreach (var comment in Model.Comments)
                        {
                            <div class="comment mb-3">
                                <p class="comment-content">@comment.Content</p>
                                <p class="text-muted">- @comment.User.Firstname @comment.User.Lastname, @comment.PostDate.ToString("MMMM dd, yyyy")</p>
                            </div>
                        }
                    }
                    <!-- Comment Submission Form -->
                    <div class="comment-form mt-4">
                        <form asp-action="PostComment" method="post">
                            <div class="form-group">
                                <label for="commentContent">Leave a comment:</label>
                                <textarea class="form-control" id="commentContent" name="Content" rows="3" required></textarea>
                            </div>
                            <input type="hidden" name="ArticleId" value="@Model.Id" />
                            <button type="submit" class="btn btn-primary">Post Comment</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
